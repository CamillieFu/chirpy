{
  "manifest_version": 2,
  "name": "Chirpy",
  "description": "Chrome extension workshop for Le Wagon Tokyo",
  "author": "Chirpy team",
  "version": "1",
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/get_tweets.js"]
    }
  ],
  "background": {
    // ...
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Chirpy"
  },
  "icons": {
    "16": "images/chirpy16.png",
    "32": "images/chirpy36.png",
    "48": "images/chirpy48.png",
    "128": "images/chirpy128.png"
  }
}
