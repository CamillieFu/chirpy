<%= render 'shared/sidebar'%>
<div class="container dash-cont my-3">
  <div class="row justify-content-center">
    <h1 class="text-center my-5" style="width: 80%">Please get in touch and our expert support team will answer all your questions.</h1>
    <div class="col-4">
      <%= render 'pages/support_form'%>
    </div>
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Meet our brilliant and knowledgeable support team</h3>
          <p class="card-text">Live support is available Mon-Fri 8am-7pm JST .</p>
        </div>
        <div class="d-flex justify-content-around pb-3">
          <div class="justify-content-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/gazwai", class: "avatar-large", style: "width: 100px", alt: "avatar" %>
            <p class="card-text text-center"><small class="text-muted">Gary Yau</small></p>
          </div>
          <div>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/angrysun", class: "avatar-large", style: "width: 100px", alt: "avatar" %>
            <p class="card-text text-center"><small class="text-muted">Steven Vasques</small></p>
          </div>
          <div>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/CamillieFu", class: "avatar-large", style: "width: 100px", alt: "avatar" %>
            <p class="card-text text-center"><small class="text-muted">Camille Fujisaki</small></p>
          </div>
          <div>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/KeiranBrown1301", class: "avatar-large", style: "width: 100px", alt: "avatar" %>
            <p class="card-text text-center"><small class="text-muted">Keiran Brown</small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
