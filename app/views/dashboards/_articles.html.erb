<% @articles.each_with_index do |article, index| %>
  <% break if index == 3 %>
  <%= link_to article_path(article) do %>
    <div class="suggested-article">
      <div class="article-card-info ml-2">
        <h6><%= article.title %></h6>
        <p class="author-font"><em>By <%= article.author %></em></p>
        <div class="suggested-article-content">
          <%= simple_format(article.content.truncate(90, omission: ' ... (continued)')) %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
