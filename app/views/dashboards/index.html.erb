<%# <%= render 'shared/navbar' %>
<div class="dash-cont">
  <h2 class="mt-5 ml-3 mb-4">Hello, <%= current_user.first_name %></h2>
  <%= render 'shared/sidebar' %>
  <div class="content row justify-content-around">
    <div class="col-lg-8">
      <div class="kid-cards d-flex align-items-center flex-wrap">
        <%= render 'kids', kids: @kids %>
        <div class="new-kid ml-5 mb-3">
          <%= link_to "+", new_kid_path, class: "m-3 add-kid", data: {toggle: "modal", target: "#newKidModal"} %>
          <%# ask TA how to make sure no overlap happens when adjusting screen size %>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="profile-card white-card text-center mt-3">
        <div class="text-center mt-5">
          <%= render 'profile_card' %>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="suggested-articles mb-4 mt-5">
        <h3 class="ml-3">Suggested Articles</h3>
        <div class="d-flex flex-wrap justify-content-around articles">
          <%= render 'articles', articles: @articles %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newKidModal" tabindex="-1" role="dialog" aria-labelledby="newKidModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'kids/new', kid: @kid %>
      </div>
    </div>
  </div>
</div>
