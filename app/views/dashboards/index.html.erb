<%# <%= render 'shared/navbar' %>
<div class="container dash-cont">
  <%= render 'shared/sidebar' %>
  <div class="row justify-content-center">
    <div class="col-lg-7 col-12">
      <div class="card-identity mt-5" style="background-image: linear-gradient(45deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%)">
        <div class="card-identity-content">
          <div class="card-identity-avatar">
              <img src="https://kitt.lewagon.com/placeholder/users/gazwai" alt="avatar" class="card-identity-img">
              <h2>Hello, <%= current_user.first_name %></h2>
          </div>
          <p>Have a nice day!</p>
        </div>
      </div>
      <div class="kid-cards d-flex align-items-center">
        <% current_user.kids.each do |kid| %>
          <%= link_to kid_path(kid) do %>
          <div class="kid-card">
            <p><i class="fa fa-duotone fa-child"></i></p>
            <%= kid.first_name %>
          </div>
          <% end %>
        <% end %>
        <div class="new-kid ml-5 mb-3">
          <%= link_to "+", new_kid_path, class: "m-3 add-kid", data: {toggle: "modal", target: "#newKidModal"} %>
          <%# ask TA how to make sure no overlap happens when adjusting screen size %>
        </div>
      </div>

    </div>
    <%# <div class="col-lg-5 col-12 mt-3"> %>
    <%# need to adjust the left margin/prevent overlapping %>
      <div class="profile-card white-card text-center col-md-8 col-lg-4 col-8 mt-5">
        <h3 class="mt-4">My Profile</h3>
        <div class="text-center">
          <p><i class="fa fa-duotone fa-user"></i></p>
          <p><%= "#{current_user.first_name} #{current_user.last_name}" %></p>
          <p><%= "#{current_user.email}" %></p>
          <%= link_to "Edit Profile", edit_user_registration_path(current_user), class: "btn btn-outline-primary" %>
          <%# <img src="" alt="avatar if we provide one"> %>
        </div>
      <%# </div> %>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newKidModal" tabindex="-1" role="dialog" aria-labelledby="newKidModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'kids/new', kid: @kid %>
      </div>
    </div>
  </div>
</div>
