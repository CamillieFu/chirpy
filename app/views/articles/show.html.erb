<%= render 'shared/navbar' %>
<%= render 'shared/sidebar'%>
<div class="container dash-cont dash-cont-article my-5">
  <div class="row justify-content-center">
    <div class="col-12 article">
    <h1 class="my-5 article-title"><%= @article.title %></h1>
      <div class="d-flex mb-3">
        <div class="d-flex align-items-center">
        </div>
        <div class="align-items-center article-info">
          <p><em><%= @article.author %></em></p>
          <p><%= @article.date.strftime("%b %d, %Y") %></p>
        </div>
      </div>
      <div class="article-content">
        <%= simple_format(@article.content) %>
      </div>
    </div>
    <%= link_to "Back to Articles", articles_path, class: "btn btn-pinky btn-animate", id: "button-display" %>
  </div>
</div>
